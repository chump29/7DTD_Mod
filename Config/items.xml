<chump>
    <!-- Increase stack -->
    <set xpath="/items/item/property[@name='Stacknumber'][@value>1]/@value">10000</set>
    <!-- Starter gear challenge -->
    <append xpath="/items">
        <item name="starterLetter">
            <property name="Extends" value="challengeQuestMaster" />
            <property name="DescriptionKey" value="starterLetterDesc" />
            <property name="EconomicValue" value="0" />
            <property name="CreativeMode" value="None" />
            <property name="Stacknumber" value="1" />
            <property class="Action0">
                <property name="QuestGiven" value="starterLetterQuest" />
                <property name="Delay" value="0" />
            </property>
            <property name="Group" value="Special Items" />
        </item>
    </append>
    <!-- Starter skills book  -->
    <append xpath="/items">
        <item name="starterBook">
            <property name="Extends" value="schematicMaster" />
            <property name="DescriptionKey" value="starterBookDesc" />
            <property name="CustomIcon" value="questMaster" />
            <property name="EconomicValue" value="0" />
            <property name="CreativeMode" value="None" />
            <property name="Stacknumber" value="1" />
            <property class="Action0">
                <property name="Class" value="GainSkill" />
                <property name="Skills_to_gain" value="attPerception,attPerception,attPerception,attPerception,attPerception,attPerception,attPerception,attPerception,attPerception,attStrength,attStrength,attStrength,attStrength,attStrength,attStrength,attStrength,attStrength,attStrength,attFortitude,attFortitude,attFortitude,attFortitude,attFortitude,attFortitude,attFortitude,attFortitude,attFortitude,attAgility,attAgility,attAgility,attAgility,attAgility,attAgility,attAgility,attAgility,attAgility,attIntellect,attIntellect,attIntellect,attIntellect,attIntellect,attIntellect,attIntellect,attIntellect,attIntellect" />
                <property name="Delay" value="0" />
            </property>
            <property name="Group" value="Special Items" />
        </item>
    </append>
    <!-- Fill empty jars -->
    <append xpath="/items/item[@name='drinkJarEmpty']/property[@class='Action1']">
        <property name="Focused_blockname_6" value="cntGraniteSink" />
        <property name="Focused_blockname_7" value="faucet02" />
        <property name="Focused_blockname_8" value="faucet04" />
        <property name="Focused_blockname_9" value="faucetBrass02" />
        <property name="Focused_blockname_10" value="faucetBrass04" />
        <property name="Focused_blockname_11" value="cntToilet01" />
        <property name="Focused_blockname_12" value="fountain" />
        <property name="Focused_blockname_13" value="cntCabinetOldSink" />
        <property name="Focused_blockname_14" value="utilitySink" />
        <property name="Focused_blockname_15" value="wallHungSink" />
        <property name="Focused_blockname_16" value="cntRetroFridgeVer1Closed" />
    </append>
    <!-- Fill empty buckets -->
    <append xpath="/items/item[@name='bucketEmpty']/property[@class='Action1']">
        <property name="Focused_blockname_6" value="cntGraniteSink" />
        <property name="Focused_blockname_7" value="faucet02" />
        <property name="Focused_blockname_8" value="faucet04" />
        <property name="Focused_blockname_9" value="faucetBrass02" />
        <property name="Focused_blockname_10" value="faucetBrass04" />
        <property name="Focused_blockname_11" value="cntToilet01" />
        <property name="Focused_blockname_12" value="fountain" />
        <property name="Focused_blockname_13" value="cntCabinetOldSink" />
        <property name="Focused_blockname_14" value="utilitySink" />
        <property name="Focused_blockname_15" value="wallHungSink" />
        <property name="Focused_blockname_16" value="cntRetroFridgeVer1Closed" />
    </append>
    <!-- Larger fuel tank -->
    <set xpath="/items/item[@name='smallEngine']/property[@class='Attributes']/property[@name='VehicleTankSize']/@value">2000,3000</set>
    <set xpath="/items/item[@name='meleeToolAxeT3Chainsaw']/effect_group/passive_effect[@name='MagazineSize' and @operation='base_set']/@value">800</set>
    <set xpath="/items/item[@name='meleeToolPickT3Auger']/effect_group/passive_effect[@name='MagazineSize' and @operation='base_set']/@value">800</set>
    <!-- Stop zombies eating through hard materials -->
    <append xpath="/items/item[@name='meleeHandMaster']/effect_group[@name='meleeHandMaster']">
        <passive_effect name="DamageModifier" operation="perc_add" value="-100" tags="concrete,metal,stone" />
    </append>
    <append xpath="/items/item[starts-with(@name, 'meleeHandZombie')]/effect_group[starts-with(@name, 'meleeHandZombie')]">
        <passive_effect name="DamageModifier" operation="perc_add" value="-100" tags="concrete,metal,stone" />
    </append>
    <!-- Allow Nail gun and claw hammer to upgrade to steel -->
    <set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/property[@class='Action1']/property[@name='Allowed_upgrade_items']/@value">resourceWood,resourceClayLump,resourceSnowBall,resourceScrapIron,resourceForgedIron,resourceForgedSteel,resourceConcreteMix,resourceCobblestones,ironDoor1_v1,vaultDoor01,scrapHatch_v1,vaultHatch_v1,resourceYuccaFibers,resourceCloth,resourceScrapPolymers,resourceNail,resourceSteelPolish</set>
    <set xpath="/items/item[@name='meleeToolRepairT1ClawHammer']/property[@class='Action1']/property[@name='Allowed_upgrade_items']/@value">resourceWood,resourceClayLump,resourceSnowBall,resourceScrapIron,resourceForgedIron,resourceForgedSteel,resourceConcreteMix,resourceCobblestones,ironDoor1_v1,vaultDoor01,scrapHatch_v1,vaultHatch_v1,resourceYuccaFibers,resourceCloth,resourceScrapPolymers,resourceNail,resourceSteelPolish</set>
    <!-- Animal snare -->
    <append xpath="/items">
        <item name="animalFeed">
            <property name="DescriptionKey" value="animalFeedDesc" />
            <property name="CustomIcon" value="animalFeed" />
            <property name="Meshfile" value="#Other/Items?Misc/parcelPrefab.prefab" />
            <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab" />
            <property name="Material" value="Morganic" />
            <property name="HoldType" value="21" />
            <property name="Group" value="Resources,Food/Cooking" />
            <property name="Stacknumber" value="500" />
            <property name="CreativeMode" value="Dev" />
            <property class="Preview">
                <property name="Zoom" value="35" />
                <property name="Pos" value="0,-0.05" />
                <property name="Rot" value="90,45,0" />
            </property>
            <property name="EconomicValue" value="3" />
        </item>
    </append>
</chump>